# EditorConfig - Antigravity-Core
# https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# PowerShell scripts
[*.ps1]
indent_size = 4
end_of_line = crlf

# Batch files
[*.bat]
indent_size = 4
end_of_line = crlf

# SQL files
[*.sql]
indent_size = 2

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# PHP files
[*.php]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Git files
[.git*]
indent_size = 2
